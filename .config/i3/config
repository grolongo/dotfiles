bindsym XF86MonBrightnessUp exec "light -A 20"

# Keyboard Brightness Controls
# ----------------------------
bindsym XF86KbdBrightnessDown exec "sudo keyboard-backlight down"
bindsym XF86KbdBrightnessUp exec "sudo keyboard-backlight up"

