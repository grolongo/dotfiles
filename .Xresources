!!!!!!!!!!!!!!!
!!! Commons !!!
!!!!!!!!!!!!!!!

*scrollBar:    false
*visualBell:   true
*urgentOnBell: true
! using Tmux scrollback buffer
*saveLines: 999999

!!!!!!!!!!!!!
!!! xterm !!!
!!!!!!!!!!!!!

! xterm.termName:                 xterm-256color
! xterm.vt100.background:         black
! xterm.vt100.foreground:         lightgray
! xterm.vt100.font:               xft:DejaVu Sans Mono:style=Book:size=12
! xterm.vt100.boldFont:           xft:DejaVu Sans Mono:style=Bold:size=12
! xterm.vt100.italicFont:         xft:DejaVu Sans Mono:style=Italic:size=12
! xterm.vt100.boldItalicFont:     xft:Dejavu Sans Mono:style=Bold Italic:size=12
! xterm.vt100.highlightSelection: false
! xterm.vt100.selectToClipboard:  true

! ! force utf8
! xterm.utf8:                     true
! xterm.vt100.locale:             false
! xterm.vt100.utf8:               true

! ! emacs
! xterm.vt100.backarrowKey:       false
! xterm.ttyModes:                 erase ^?
! xterm.vt100.metaSendsEscape:    true

!!!!!!!!!!!!!
!!! URxvt !!!
!!!!!!!!!!!!!

URxvt.reverseVideo:         true
URxvt.letterSpace:          -1
URxvt.font:                 xft:DejaVu Sans Mono:style=Book:size=12
URxvt.boldFont:             xft:DejaVu Sans Mono:style=Bold:size=12
URxvt.italicFont:           xft:DejaVu Sans Mono:style=Italic:size=12
URxvt.boldItalicFont:       xft:Dejavu Sans Mono:style=Bold Italic:size=12

URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

URxvt.clipboard.copycmd:    xclip -i -selection clipboard
URxvt.clipboard.pastecmd:   xclip -o -selection clipboard

URxvt.keysym.Button3: eval:paste_clipboard
URxvt.perl-ext-common:      default,matcher,selection-to-clipboard,clipboard,-confirm-paste,font-size
! URxvt.perl-ext-common:
URxvt.url-launcher:         firefox
URxvt.matcher.button:       1
URxvt.url-select.underline: true
