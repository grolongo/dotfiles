!!!!!!!!!!!!!!!
!!! Commons !!!
!!!!!!!!!!!!!!!

Xft.autohint:  0
Xft.hinting:   1
Xft.hintstyle: hintfull
Xft.antialias: true
Xft.rgba:      rgb
Xft.lcdfilter: lcddefault

*dpi:          120
Xft.dpi:       120
*scrollBar:    false
*visualBell:   true
*urgentOnBell: true
! using Tmux scrollback buffer
*saveLines: 999999

!!!!!!!!!!!!!
!!! URxvt !!!
!!!!!!!!!!!!!

URxvt.reverseVideo:         true
!URxvt.letterSpace:          -1
URxvt.font:                 -misc-spleen-medium-r-normal--24-240-72-72-c-120-iso10646-1
URxvt.boldFont:             -misc-spleen-medium-r-normal--24-240-72-72-c-120-iso10646-1
URxvt.italicFont:           -misc-spleen-medium-r-normal--24-240-72-72-c-120-iso10646-1
URxvt.boldItalicFont:       -misc-spleen-medium-r-normal--24-240-72-72-c-120-iso10646-1

URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

URxvt.clipboard.copycmd:    xclip -i -selection clipboard
URxvt.clipboard.pastecmd:   xclip -o -selection clipboard

URxvt.keysym.Button3: eval:paste_clipboard
URxvt.perl-ext-common:      default,matcher,selection-to-clipboard,clipboard,-confirm-paste,font-size
! URxvt.perl-ext-common:
URxvt.url-launcher:         firefox
URxvt.matcher.button:       1
URxvt.url-select.underline: true
