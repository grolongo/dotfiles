# Viewer/Editors
export VISUAL=nvim
export EDITOR=nvim
export PAGER=less

# Language environment
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# Seafile/Nextcloud
if [[ $(uname -r) =~ Microsoft ]]; then
  export win_userprofile="$(cmd.exe /c "<nul set /p=%UserProfile%" 2>/dev/null)"
  export win_userprofile_drive="${win_userprofile%%:*}:"
  export userprofile_mount="$(findmnt --noheadings --first-only --output TARGET "$win_userprofile_drive")"
  export win_userprofile_dir="${win_userprofile#*:}"
  export userprofile="${userprofile_mount}${win_userprofile_dir//\\//}"
  export HOUSE=$userprofile
else
  export HOUSE=$HOME
fi

export CLOUD_DIR=$HOUSE/Nextcloud
export PROJECTS_DIR=$HOUSE/Nextcloud/Projects
export DOCUMENTS_DIR=$HOUSE/Nextcloud/Documents
export PRIVATE_DIR=$HOUSE/Nextcloud/Private
export NOTES_DIR=$HOUSE/Nextcloud/Notes
export IMAGES_DIR=$HOUSE/Nextcloud/Photos

# Dotfiles
export DOTFILES_DIR=$HOME/dotfiles

# GPG
GPG_TTY=$(tty)
export GPG_TTY

# Homebrew
if test "$(command -v brew >/dev/null 2>&1)"
then
  export HOMEBREW_NO_INSECURE_REDIRECT=1
  export HOMEBREW_CASK_OPTS=--require-sha
  export HOMEBREW_NO_ANALYTICS=1
fi
