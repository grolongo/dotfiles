#!/usr/bin/env bash
set -e
set -u
set -o pipefail
IFS=$'\n\t'

function get_brightness {
    brightness_current=$(brightnessctl get)
    brightness_max=$(brightnessctl max)
    printf "%.0f" "$(echo "scale=2; $brightness_current / $brightness_max * 100" | bc)"
}

function show_brightness_notif {
    brightness=$(get_brightness)
    dunstify -t 3000 -h string:x-dunst-stack-tag:brightness_notif -h int:value:"${brightness}" "Brightness: ${brightness}%"
}

case $1 in
    up)
        brightnessctl -q set +10%
        show_brightness_notif
        ;;
    down)
        brightnessctl -q set 10%-
        show_brightness_notif
        ;;
esac
